---
import Base from "../../layouts/Base.astro";
import { isIndexableQuestion, loadQuestions } from "../../lib/generated";

const questions = await loadQuestions();
const indexable = questions.filter(isIndexableQuestion);
const sortedIndexable = [...indexable].sort((a, b) => {
  const aTime = new Date(a.published_at ?? a.created_at ?? 0).getTime();
  const bTime = new Date(b.published_at ?? b.created_at ?? 0).getTime();
  return bTime - aTime;
});
const latest = sortedIndexable.slice(0, 200);

const canonical = "https://freeperlcode.com/questions";
---

<Base
  title="Perl Questions and Answers - Verified Code Examples"
  description="Browse 3,000+ verified Perl questions and answers with runnable code examples. Find solutions for text processing, file handling, regex, and more."
  canonical={canonical}
>
  <section class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="mb-8">
      <h1 class="text-3xl font-bold mb-2">Perl Questions & Answers</h1>
      <p class="text-gray-600 dark:text-gray-400">
        Showing {latest.length} of {indexable.length} published & verified pages.
        Each question includes verified code examples with actual output.
      </p>
    </div>

    {indexable.length === 0 ? (
      <div class="p-6 rounded-xl border border-gray-200 dark:border-dark-700 bg-gray-50 dark:bg-dark-800">
        <p class="text-gray-700 dark:text-gray-300">
          No verified pages are published yet. Run the pipeline and publish a small batch, then rebuild.
        </p>
        <div class="mt-4 text-sm text-gray-600 dark:text-gray-400">
          Tip: <code class="bg-gray-200 dark:bg-dark-700 px-2 py-1 rounded">make generate</code> &rarr; <code class="bg-gray-200 dark:bg-dark-700 px-2 py-1 rounded">make publish</code> &rarr; <code class="bg-gray-200 dark:bg-dark-700 px-2 py-1 rounded">make export</code> &rarr; <code class="bg-gray-200 dark:bg-dark-700 px-2 py-1 rounded">make build</code>
        </div>
      </div>
    ) : (
      <>
        <div class="mb-6">
          <div class="flex flex-wrap gap-2 text-sm">
            <a href="/topics" class="text-perl-500 hover:underline">
              Browse by Topic &rarr;
            </a>
            <span class="text-gray-400">|</span>
            <a href="/functions" class="text-perl-500 hover:underline">
              Functions Reference &rarr;
            </a>
            <span class="text-gray-400">|</span>
            <a href="/search" class="text-perl-500 hover:underline">
              Search &rarr;
            </a>
          </div>
        </div>

        <ul class="space-y-3">
          {latest.map((q) => (
            <li>
              <a
                href={`/questions/${q.slug}`}
                class="block p-4 rounded-lg border border-gray-200 dark:border-dark-700 hover:border-perl-500 dark:hover:border-perl-500 transition-colors bg-white dark:bg-dark-900"
              >
                <div class="text-sm text-gray-500 dark:text-gray-400 mb-1">
                  <span class="inline-block px-2 py-0.5 text-xs font-medium rounded bg-perl-100 dark:bg-perl-900/30 text-perl-700 dark:text-perl-400 mr-2">
                    {q.category}
                  </span>
                  <span>{q.difficulty}</span>
                </div>
                <div class="font-medium">{q.title}</div>
                {q.is_verified && (
                  <div class="mt-2 inline-flex items-center text-xs text-green-600 dark:text-green-400">
                    <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                    </svg>
                    Verified with runnable code
                  </div>
                )}
              </a>
            </li>
          ))}
        </ul>
      </>
    )}
  </section>
</Base>
