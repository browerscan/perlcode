# PerlCode Frontend - Cloudflare Pages Configuration
# Copy this to wrangler.toml and fill in your values
# DO NOT commit wrangler.toml to version control!

name = "perlcode"
compatibility_date = "2024-01-01"
pages_build_output_dir = "dist"

# Account ID - use environment variable CLOUDFLARE_ACCOUNT_ID instead
# account_id = "your-account-id-here"

[vars]
PUBLIC_API_URL = "https://api.freeperlcode.com"

# For local development, you can override with:
# [env.dev.vars]
# PUBLIC_API_URL = "http://localhost:3000"
