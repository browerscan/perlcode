# Database (PostgreSQL + pgvector)
POSTGRES_DB=perlcode
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_PORT=55432
POSTGRES_BIND_IP=127.0.0.1

# App DB connection (local dev: API runs on host, DB runs in Docker)
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=SCHEMA
DATABASE_URL=<your-postgresql-connection-string>

# App DB connection (Docker: API runs in Compose, DB host is `db`)
DATABASE_URL_DOCKER=<your-postgresql-docker-connection-string>

# VectorEngine API (OpenAI-compatible)
VECTORENGINE_TOKEN=sk-your-token-here

# API Server
PORT=3000
API_BIND_IP=127.0.0.1
# Optional comma-separated list of allowed CORS origins
# CORS_ORIGINS=https://perlcode.dev,https://www.perlcode.dev,http://localhost:4321

# Frontend (for Astro)
PUBLIC_API_URL=http://localhost:3000
